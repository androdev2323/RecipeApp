<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <com.google.android.material.card.MaterialCardView

        android:id="@+id/CV_categoryviewholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        app:cardBackgroundColor="@color/md_theme_light_surfaceVariant"
        app:cardCornerRadius="200dp"
        app:cardElevation="6dp"

        style="?attr/materialCardViewOutlinedStyle"

        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/CL_categroryviewholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:elevation="60dp">

            <TextView
                android:id="@+id/tv_category_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/roboto_medium"
                android:maxLines="1"
                android:padding="20dp"
                android:textColor="@color/black"
                android:text="Burger"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/IV_categoryimage"
                app:layout_constraintStart_toStartOf="@+id/IV_categoryimage"
                app:layout_constraintTop_toBottomOf="@+id/IV_categoryimage" />

            <ImageView
                android:id="@+id/IV_categoryimage"
                android:layout_width="wrap_content"
                android:layout_height="91dp"
                android:adjustViewBounds="true"
                android:padding="20dp"
                android:src="@drawable/burgerimage"
                app:layout_constraintBottom_toTopOf="@id/tv_category_name"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </ImageView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>